{
  "name": "validus",
  "version": "1.0.0",
  "description": "A validation pipeline utility",
  "main": "index.js",
  "author": "Rich Dillon <richraid21@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "[ -d dist ] || mkdir dist",
